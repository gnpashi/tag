<%= form_with(url: new_it_put_path, local: false, method: :put, class: "d-flex flex-column justify-content-center vh100") do |form| %>
  <div class="form-group">
  <h1 >
    <%= form.label :player, "מי תופס?" %>
  </h1>
    <%= form.select :player, options_for_select(Player.all.map{ |player| [player.name, player.id] }), { include_blank: true }, class: "form-control my-3" %>
  </div>

  <%= form.submit "שליחה", class: "btn btn-primary" %>
<% end %>
