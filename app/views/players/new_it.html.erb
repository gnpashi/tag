<%= form_with(url: new_it_put_path, local: false, method: :put ) do |form| %>
  <div class="form-group">
    <%= form.label :player, "Select a player:" %>
    <%= form.select :player, options_for_select(Player.all.map{ |player| [player.name, player.id] }), { include_blank: true }, class: "form-control" %>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
